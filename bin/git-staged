#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash


## Print help output
function usage {
    cat <<EOF

    Show the staged files in a git repository

    This script is an alias for git diff --staged

    ${TOOLSET_SCRIPT_NAME} [-h|--help]

    Arguments:
      -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}


function main {
    if var::gt "${#}" 1 \
    || var::equals "${1:-""}" "-h" \
    || var::equals "${1:-""}" "--help"
    then
        usage
    fi

    exec git diff --staged
}

main "${@}"
