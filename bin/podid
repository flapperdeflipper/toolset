#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash


## Print help output
function usage {
    cat <<EOF

    Grep k8s object names matching a regex

    This script can be used to find pods in a k8s cluster of which the pod name
    matches a given regext.

    ${TOOLSET_SCRIPT_NAME} <regex> [<arguments>]

   Arguments:
    -ns, --namespace - Print the namespace too

    -h, --help   - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME} kube -ns

EOF

    exit 0
}


function main {

    if var::lt "${#}" 1 \
    || var::equals "${1:-""}" "-h" \
    || var::equals "${1:-""}" "--help"
    then
        usage
    fi

    declare -r regex="${1:-""}"; shift
    declare arguments="${*}"

    if var::matches "${arguments}" "-ns" \
    || var::matches "${arguments}" "--namespace"
    then
        awkline='{ print $1 " " $2 }'
    else
        awkline='{ print $2 }'
    fi

    exec kubectl get pods -A -o wide \
        | sed 1d \
        | grep -E "${regex}" \
        | awk "${awkline}"
}


main "${@}"
