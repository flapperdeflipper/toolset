#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash

## Print help output
function usage {
    cat <<EOF

    Show an overal state of an elasticsearch cluster

    This script shows the state of an elasticsearch cluster by calling
    several es-* utils in a watch loop.

    ${TOOLSET_SCRIPT_NAME} [-h|--help]

    Arguments:
      -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}


function main {
    if var::gt "${#}" 1 \
    || var::equals "${1:-""}" "-h" \
    || var::equals "${1:-""}" "--help"
    then
        usage
    fi

    local -r renew="${1:-2}"

    exec watch -n "${renew}" 'es-health; es-indices; es-shards'
}

main "${@}"
