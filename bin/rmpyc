#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash


## Print help output
function usage {
    cat <<EOF

    Remove all python cache files from a directory

    This script retrieves all pyc and __pycache__ files and removes those.

    ${TOOLSET_SCRIPT_NAME} [-h|--help]

    Arguments:
      -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}


function main {
    if var::gt "${#}" 0 \
    || interact::usage "${@}"
    then
        usage
    fi

    find . -type f -name '*\.pyc' -exec rm -v {} \;
    find . -type d -name '__pycache__'  -exec rm -rvf {} \;
}

main "${@}"

