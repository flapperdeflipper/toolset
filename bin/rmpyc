#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash

## Print help output
# shellcheck disable=SC2154
function usage {
    cat <<EOF

    Remove all python cache files from a directory

    This script retrieves all pyc and __pycache__ files and removes those.

    ${TOOLSET_SCRIPT_NAME} [-h|--help]

    Arguments:
      -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}


function main {
    if var::gt "${#}" 0 \
    || interact::usage "${@}"
    then
        usage
    fi

    find . -follow -type f -name '*\.pyc' -exec rm -v {} +

    for directory in __pycache__ .pytest_cache .mypy_cache
    do
        find . \
            -follow \
            -type d \
            -name "${directory}" \
            -exec rm -rvf {} +
    done
}

main "${@}"

