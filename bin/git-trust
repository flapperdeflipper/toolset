#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash


## Print help output
function usage {
    cat <<EOF

    Add current directory to git safe.directory

    ${TOOLSET_SCRIPT_NAME}

   Arguments:
    -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}

function main {
    if ! var::eq "${#}" 0 \
    || interact::usage "${@}"
    then
        usage
    fi

    local current_directory
          current_directory="$( realpath . )"

    exec git config --global --add safe.directory "${current_directory}"
}

main "${@}"


