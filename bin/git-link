#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash


## Print help output
function usage {
    cat <<EOF

    Show the web link of your current git repo

    This script prints the base web url for a local git repository

    ${TOOLSET_SCRIPT_NAME} [-h|--help]

    Arguments:
      -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}


function main {
    if var::gt "${#}" 1 \
    || var::equals "${1:-""}" "-h" \
    || var::equals "${1:-""}" "--help"
    then
        usage
    fi

    ## Run command
    git::baseurl "$@"

    ## Return exit code
    exit "${?}"
}

main "${@}"
