#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash

## Print help output
function usage {
    cat <<EOF

    Remove the last commit, but not the files

    ${TOOLSET_SCRIPT_NAME}

   Arguments:
    -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}

function main {
    if ! var::eq "${#}" 0 \
      || var::equals "${1:-""}" "-h" \
      || var::equals "${1:-""}" "--help"
    then
        usage
    fi

    if git::is_dirty
    then
      exit::error 'This repo is dirty. Please commit or stash your open changes first!'
    fi

    log::info "Undoing last commit"

    git reset HEAD~1 --mixed
}

main "${@}"
