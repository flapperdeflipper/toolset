#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash


## Print help output
function usage {
    cat <<EOF

    Create a new branch based on the jira url

    ${TOOLSET_SCRIPT_NAME} <url>

   Arguments:
    -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME} https://some.atlassian.net/browse/TIQ04-30304

EOF

    exit 0
}

function main {
    local input="${*}"

    if ! var::eq "${#}" 1 \
    || interact::usage "${@}" \
    || var::is_empty "${input}"
    then
        usage
    fi

    local branch
          branch="$( git::branch )"

    if git::is_dirty
    then
        exit::error "Current workdir on ${branch} is dirty"
    fi

    local head_branch
          head_branch="$( git::head_branch )"

    if ! var::matches "${branch}" "${head_branch}"
    then
        git checkout "${head_branch}"
        git pull
    fi

    local issue="${input##*/}"

    exec git checkout -b "feature/${issue}"
}

main "${@}"
