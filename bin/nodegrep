#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash


## Print help output
function usage {
    cat <<EOF

    Grep k8s nodes matching a regex

    This script can be used to find nodes on a k8s cluster that are
    matching a given regex.

    ${TOOLSET_SCRIPT_NAME} <regex> [<options>]

   Arguments:
    -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME} -r kube -n default

EOF

    exit 0
}


function main {
    if var::lt "${#}" 1 \
    || interact::usage "${@}"
    then
        usage
    fi

    # shellcheck disable=SC2086,SC2001
    local -r regex="${1}"; shift
    local arguments="${*}"

    if var::is_empty "${arguments}"
    then
        arguments=" -o wide"
    fi

    k8s::grep \
        --object node \
        --regex "${regex}" \
        --no-headers \
        --label-columns worker-group,node.kubernetes.io/lifecycle,topology.kubernetes.io/zone,node.kubernetes.io/instance-type,beta.kubernetes.io/arch \
        --sort-by=.metadata.creationTimestamp \
        ${arguments}

}

main "${@}"
