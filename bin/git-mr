#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash


## Print help output
function usage {
    cat <<EOF

    Push branch and create merge request

    ${TOOLSET_SCRIPT_NAME}

   Arguments:
    -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME} -d <description>

EOF

    exit 0
}

function main {
    var::eq "${#}" 0 && usage

    local description=""

    while [[ "${1:-""}" != "" ]]
    do
        case "${1}" in
            -h|--help)
                usage
            ;;
            -d|--desc|--description)
                shift
                description="${*}"
                break
            ;;
            *)
                usage
            ;;
        esac
    done

    local branch
          branch="$( git::branch )"

    local default_branch
          default_branch="$( git::default_branch )"

    git::sanity "${branch}" "${default_branch}"

    local issue="${branch#feature/}"

    if var::is_empty "${description}"
    then
          description="$( \
              interact::prompt_response "Please give a title for your MR" \
          )"
    fi

    command git push \
        --set-upstream origin "${branch}" \
        -o merge_request.create \
        -o merge_request.title="[${issue}] ${description}" \
        -o merge_request.description="[${issue}] ${description}" \
        -o merge_request.target="${default_branch}"
}

main "${@}"
