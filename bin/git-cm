#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash disable=SC2154


## Print help output
function usage {
    cat <<EOF

    checkout head branch

    ${TOOLSET_SCRIPT_NAME}

   Arguments:
    -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}

function main {
    if ! var::le "${#}" 1 \
    || interact::usage "${@}"
    then
        usage
    fi

    local branch
          branch="$( git::branch )"

    local default_branch
          default_branch="$( git::default_branch )"

    git::sanity "${branch}" "${default_branch}"

    git checkout "${default_branch}"

    if [[ "${*}" =~ --pull ]]
    then
        git pull origin "${default_branch}"
    fi
}

main "${@}"
