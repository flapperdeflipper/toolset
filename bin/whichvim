#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash

## Print help output
function usage {
    cat <<EOF

    Edit something in PATH

    Arguments:
      -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME} <script>

EOF

    exit 0
}


function main {
    if var::gt "${#}" 1 \
    || interact::usage "${@}"
    then
        usage
    fi

    filename="$( which "${1}" )"

    if [[ ! -z "${filename}" ]] \
    && file "${filename}" | grep -q "ASCII text"
    then
        vim "${filename}"
    fi

    exit 0
}

main "${@}"
