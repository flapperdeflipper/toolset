#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash


## Print help output
function usage {
    cat <<EOF

    Find commits matching a pattern

    ${TOOLSET_SCRIPT_NAME} <pattern>

   Arguments:
    -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME} bash

EOF

    exit 0
}

function main {
    if ! var::eq "${#}" 1 \
    || interact::usage "${@}"
    then
        usage
    fi

    local -r pattern="${1:-""}"

    var::is_empty "${pattern}" && usage

    log::info "Listing all commits matching: ${pattern}"

    local -r format='%C(yellow)%h\t%Cblue%ad\t%Creset%s%Cgreen  [%cn] %Cred%d'

    git log \
        --pretty=format:"${format}" \
        --decorate \
        --date=short \
        --regexp-ignore-case \
        --grep="${pattern}"
}

main "${@}"
