#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash disable=SC2154


## Print help output
function usage {
    cat <<EOF

    checkout head branch and pull master

    ${TOOLSET_SCRIPT_NAME}

   Arguments:
    -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}

function main {
    if ! var::eq "${#}" 0 \
    || interact::usage "${@}"
    then
        usage
    fi

    local default_branch
          default_branch="$( git::default_branch )"

    if git::is_dirty
    then
        log::info "Stashing open changes"
        command git stash
    fi

    command git checkout "${default_branch}" \
        && git pull
}

main "${@}"
