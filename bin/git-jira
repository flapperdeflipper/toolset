#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash


## Print help output
function usage {
    cat <<EOF

    Show jira issue based on branch name

    ${TOOLSET_SCRIPT_NAME}

   Arguments:
    -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}

function main {
    if ! var::eq "${#}" 0 \
    || interact::usage "${@}"
    then
        usage
    fi

    local branch
          branch="$( git rev-parse --abbrev-ref HEAD )"

    if ! var::matches "${branch}" "feature/"
    then
        log::warning "Unknown branch scheme!"
        exit 0
    fi

    local issue="${branch#feature/}"

    open "https://tiqets.atlassian.net/browse/${issue}"
}

main "${@}"
