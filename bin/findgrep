#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash disable=SC2154


## Print help output
function usage {
    cat <<EOF

    Open all files found with find in vim containing content matching a regex

    This script does a grep in a directory and opens all files that
    are matching a given regular expression.

    ${TOOLSET_SCRIPT_NAME} <regex> <find args> [-h|--help]

    Arguments:
      -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME} kube

EOF

    exit 0
}



function main {
    if var::lt "${#}" 1 \
    || interact::usage "${@}"
    then
        usage
    fi

    local -r regex="${1:-""}"; shift
    local -r arguments="${*:-"-type f"}"
    local files

    local -a cmd=(
        find
        "."
        "${arguments}"
    )

    # shellcheck disable=SC2068
    files=$( \
        command ${cmd[@]} \
        | grep -v '\.git/' \
        | grep -sI ${regex} \
        | cut -d: -f1  \
        | sort -u \
        | xargs \
    ) || true

    if var::has_value "${files}"
    then
        log::info "Found $( echo "${files}" | wc -l ) files"
        vim ${files}
    else
        log::warning "No files found matching ${regex}"
    fi
}

main "${@}"
