#!/usr/bin/env toolset
# vi: ft=bash
# shellcheck shell=bash

## Print help output
function usage {
    cat <<EOF

    Open a temporary vim file

    This script creates a temp file and opens the temp file in vim
    It can be used for making quick notes.

    This script does a recursive grep in a directory and opens all files that
    are matching a given regular expression.

    Arguments:
      -h, --help  - Show this menu

    Example:
      ${TOOLSET_SCRIPT_NAME}

EOF

    exit 0
}



function main {
    if var::gt "${#}" 1 \
    || interact::usage "${@}"
    then
        usage
    fi

    local -r name="${1:-""}"
    local filename

    if [[ ! -d "${HOME}/.tmp" ]]
    then
        mkdir -p "${HOME}/.tmp"
    fi

    if var::is_empty "${name}"
    then
        filename="$( mktemp -p "${HOME}/.tmp" )"
    else
        filename="${HOME}/.tmp/${name}.$(date +'%Y%m%d%H%M%S')"
    fi

    vim "${filename}"

    echo "Filename: ${filename}"

    exit 0
}

main "${@}"
